{
	"name": "mos-dummy-server",
	"version": "0.0.0",
	"private": true,
	"description": "A dummy MOS server for testing MOS clients with failover capabilities",
	"main": "dist/index.js",
	"scripts": {
		"dev": "ts-node src/index.ts",
		"validate:dependencies": "yarn npm audit --environment production && yarn license-validate",
		"validate:dev-dependencies": "yarn npm audit ",
		"license-validate": "yarn sofie-licensecheck"
	},
	"license": "MIT",
	"dependencies": {
		"@mos-connection/connector": "4.3.1",
		"chokidar": "^3.5.3"
	},
	"devDependencies": {
		"@sofie-automation/code-standard-preset": "*",
		"@types/node": "^20.10.5",
		"ts-node": "^10.9.2",
		"typescript": "~4.9.5"
	},
	"engines": {
		"node": ">=14.18.0"
	},
	"prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"run -T prettier"
		],
		"*.{ts,tsx,js,jsx}": [
			"run -T eslint"
		]
	},
	"files": [
		"/dist",
		"/CHANGELOG.md",
		"/README.md",
		"/LICENSE"
	]
}
